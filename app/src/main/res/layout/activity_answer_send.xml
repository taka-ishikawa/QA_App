<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnswerSendActivity" android:padding="16dp">

    <TextView
            android:text="回答"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextAnswer" android:inputType="textImeMultiLine"
            android:layout_below="@+id/textView3" android:layout_alignParentStart="true"/>
    <Button
            android:text="投稿"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSend"
            android:layout_below="@+id/editTextAnswer" android:layout_alignParentStart="true"
            android:background="@drawable/btn"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" android:layout_below="@+id/buttonSend"
            android:layout_centerHorizontal="true" android:visibility="gone"/>
</RelativeLayout>